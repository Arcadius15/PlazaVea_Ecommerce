<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DireccionDetalleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llbotonesdir">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:uiZoomControls="true" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/svLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_custom"
            android:elevation="5dp"
            app:iconifiedByDefault="false"
            app:queryHint="Buscar Dirección..."
            ></androidx.appcompat.widget.SearchView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llbotonesdir"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Introduzca una dirección y mueva el cursor según convenga"
            android:fontFamily="@font/montserrat_semibold"
            android:textAlignment="center"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnEditarDir"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/boton_editar"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/rounded_button"></Button>

            <Button
                android:id="@+id/btnBorrarDir"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@color/granate_300"
                android:text="@string/boton_borrar"></Button>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>